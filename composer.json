{
    "name": "sourcetoad/enhanced-resources",
    "description": "Laravel's API Resources enhanced.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Jason Jones",
            "email": "jason.erik.jones@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sourcetoad\\EnhancedResources\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sourcetoad\\EnhancedResources\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1||^8.2||^8.3||^8.4||^8.5",
        "laravel/framework": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.5|^11.5",
        "laravel/pint": "1.19"
    },
    "scripts": {
        "check-code": [
            "@lint",
            "@test"
        ],
        "lint": "@php vendor/bin/pint --test",
        "lint:fix": "@php vendor/bin/pint",
        "test": "@php vendor/bin/phpunit"
    }
}
